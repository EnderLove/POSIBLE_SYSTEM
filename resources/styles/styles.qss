#btnPlus, #btnMinus {
    background-color: #111;
    color: #00eaff;
    border: 2px solid #00eaff;
    border-radius: 10px;
    font-size: 18px;
    font-weight: bold;
    padding: 4px 8px;
    max-width: 20px;
    min-width: 20px;
}

#btnDelete {
    background-color: #330000;
    color: #ff4444;
    border: 2px solid #ff4444;
    border-radius: 10px;
    font-size: 18px;
    padding: 4px 8px;
}


#lblProductName {
    text-align: center;
}
